<!--    <bean id="accountDaoImpl" class="cn.ynu.pojoo.impl.AccountDaoImpl"></bean>-->

<!--    <bean id="accountServiceImpl" class="cn.ynu.service.impl.AccountServiceImpl"></bean>-->

<!--    <bean id="userServiceImpl" class="cn.ynu.service.impl.UserServiceImpl"></bean>-->


</beans>